<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/answers_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/two"
        android:textColor="@color/primary_text"
        tools:text="Esta es una respuesta a un post" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/one"
        android:layout_marginStart="@dimen/one"
        android:layout_marginRight="@dimen/one"
        android:layout_marginEnd="@dimen/one"
        android:background="@color/divider" />

</LinearLayout>
